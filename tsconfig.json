// this tsconfig is required for proper config of vscode+eslint
{
	"extends": "@codingame/tsconfig",
	"compilerOptions": {
		"noEmit": true,
		"declaration": false,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "es2020",
		"module": "esnext",
		"lib": [
			"es2021",
			"DOM"
		],
		"rootDir": "./",
		"paths": {
			"vs/*": [
				"./vscode/vs/*"
			],
			"vscode/*": [
				"./vscode/*"
			]
		},
		"preserveConstEnums": true
	},
	"include": [
		"**/src/**/*",
		"./rollup/*.ts",
		"./release.ts",
		"*.ts"
	]
}
